#include <stdio.h>

int		ft_fibonacci(int index)
{
	int ele;

	ele = index - ;
	if (index < 0)
		return (-1);
	if (index == 0)
		return (0);
	if (index == 1)
		return (0);
	else
		return (ele + ft_fibonacci(index - 1) + ft_fibonacci(index - 2));
}

int main(void)
{
	printf("%d\n", ft_fibonacci(3));
	printf("%d\n", ft_fibonacci(4));
		return (0);
}
